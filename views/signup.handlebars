<div class="card">
  <h3 class="card-header">Sign Up</h3>
  <div id="signup-form" class="card-body">
    <label for="firstname-signup" class="form-label">First Name</label>
    <input id="firstname-signup" type="text" class="form-input" />

    <label for="lastname-signup" class="form-label">Last Name</label>
    <input id="lastname-signup" type="text" class="form-input" />
    
    <label for="username-signup" class="form-label">Username</label>
    <input id="username-signup" type="text" class="form-input" />

    <label for="email-signup" class="form-label">Email</label>
    <input id="email-signup" type="text" class="form-input" />

    <label for="developer-signup" class="form-label">I am a Developer</label>
    <input id="developer-signup" type="checkbox" class="form-input" value="1" />

    <label class="form-label" for="password-signup">Password</label>
    <input id="password-signup" type="password" class="form-input" />

    <button type="submit" class="btn signup-form">Signup</button>
    <a class="login-link" href="/login">Log In Here</a>
  </div>
</div>

<script src="/js/signup.js"></script>
